<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.amap.api.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/edt_id"
        android:hint="业务ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edt_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/edt_id"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="输入半径（单位：米）"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="触发条件"
        android:textColor="@android:color/black"
        />
    <CheckBox
        android:id="@+id/cb_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/tv_condition"
        app:layout_constraintTop_toTopOf="@+id/tv_condition"
        />
    <CheckBox
        android:id="@+id/cb_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离开"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/cb_in"
        app:layout_constraintTop_toTopOf="@+id/tv_condition"
        android:layout_marginLeft="20dp"
        />
    <CheckBox
        android:id="@+id/cb_stayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停留"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/cb_out"
        app:layout_constraintTop_toTopOf="@+id/tv_condition"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btn_add_fence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加栅栏"
        app:layout_constraintTop_toBottomOf="@+id/cb_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>